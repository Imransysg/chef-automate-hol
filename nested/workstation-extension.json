{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "computeSettings": {
            "type": "object"
        },
        "workstationSetupUrl2": {
            "type": "string"
        },
        "chef-server-fqdn": {
            "type": "string"
        },
        "wsnodefqdn": {
            "type": "string"
        },
        "envnode0fqdn": {
            "type": "string"
        },
        "envnode1fqdn": {
            "type": "string"
        },
        "envnode2fqdn": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[concat(parameters('computeSettings').wsVmName,'/workstation-setup')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "location": "[parameters('computeSettings').location]",
            "apiVersion": "2016-04-30-preview",
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[parameters('workstationSetupUrl2')]"
                    ],
                    "commandToExecute": "[concat('powershell.exe -File workstation-setup1.ps1', ' ', parameters('computeSettings').chefServerUserName, ' ', parameters('computeSettings').adminpassword, ' ', parameters('chef-server-fqdn'), ' ', parameters('computeSettings').organizationName, ' ', parameters('computeSettings').nodesAdminUsername, ' ', parameters('computeSettings').wsAdminUsername, ' ', parameters('wsnodefqdn'), ' ', parameters('envnode0fqdn'), ' ', parameters('envnode1fqdn'), ' ', parameters('envnode2fqdn'))]"
                }
            }
        }
    ]
}
